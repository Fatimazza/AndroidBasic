<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewsInConstraintActivity">

    <ImageView
        android:id="@+id/iv_image_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pixel_google"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/TextContent.Small.White"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#4D000000"
        android:drawableStart="@drawable/ic_collections_white_18dp"
        android:drawablePadding="4dp"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/dummy_photos"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/tv_text_price"
        style="@style/TextContent.Black"
        android:layout_width="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="@string/dummy_value"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@id/tv_text_stock"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_phone" />

    <TextView
        android:id="@+id/tv_text_stock"
        style="@style/TextContent.Subtitle"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/stock"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_text_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_price" />

    <TextView
        android:id="@+id/tv_text_description"
        style="@style/TextContent"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:lineSpacingMultiplier="1"
        android:text="@string/content_text"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_stock" />

</android.support.constraint.ConstraintLayout>
